
public class mathe{
    double ergebnis = 0;
    int plus = 1;
    int minus = 2;
    int i = 1;
    public void aufgabe(){
        while(i == 1){
         ergebnis = ergebnis + plus - minus;
         System.out.println(ergebnis);
         plus = plus + 2;
         minus = minus + 2;
        }
    }
}
//das machen 4*(1/1 + 1/2 - ...)
//Nachkommerstelle immer 5 
