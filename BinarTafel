import java.util.Scanner;

public class dezimalRechner {
    public static void dezimalToBinary() {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Geben Sie eine Dezimalzahl ein: ");
        int dezimalZahl = scanner.nextInt();

        String binaer = "";
        while (dezimalZahl > 0) {
            int rest = dezimalZahl % 2;
            binaer = rest + binaer;
            dezimalZahl = dezimalZahl / 2;
        }

        System.out.println("Die BinÃ¤rzahl ist: " + binaer);
    }

    public static void dezimalToBinaryTafel(int dezimal){
        String ausgabe = ""; 

        if (dezimal >= 128){
            ausgabe = ausgabe + "1";

            dezimal = dezimal - 128;
        }
        else {
            ausgabe = ausgabe + "0"; 
        }
        if (dezimal >= 64){
            ausgabe = ausgabe + "1";

            dezimal = dezimal - 64;
        }
        else {
            ausgabe = ausgabe + "0"; 
        }
        if (dezimal >= 32){
            ausgabe = ausgabe + "1";

            dezimal = dezimal - 32;
        }
        else {
            ausgabe = ausgabe + "0"; 
        }
        if (dezimal >= 16){
            ausgabe = ausgabe + "1";

            dezimal = dezimal - 16;
        }
        else {
            ausgabe = ausgabe + "0"; 
        }
        if (dezimal >= 8){
            ausgabe = ausgabe + "1";

            dezimal = dezimal - 8;
        }
        else {
            ausgabe = ausgabe + "0"; 
        }
        if (dezimal >= 4){
            ausgabe = ausgabe + "1";

            dezimal = dezimal - 4;
        }
        else {
            ausgabe = ausgabe + "0"; 
        }
        if (dezimal >= 2){
            ausgabe = ausgabe + "1";

            dezimal = dezimal - 2;
        }
        else {
            ausgabe = ausgabe + "0"; 
        }
        if (dezimal >= 1){
            ausgabe = ausgabe + "1";

            dezimal = dezimal - 1;
        }
        else {
            ausgabe = ausgabe + "0"; 
        }

        System.out.println(dezimal + "(10) => " + ausgabe + "(2)");
    }

    public static void dezimalToBinary2Tafel(int dezimal){
        String ausgabe = ""; 
        int stelle = 128; 
        while(stelle >= 1){
            if (dezimal >= stelle ){
                ausgabe = ausgabe + "1";

                dezimal = dezimal - stelle;
            }
            else {
                ausgabe = ausgabe + "0"; 
            }

            System.out.println(dezimal + "(10) => " + ausgabe + "(2) dTb2");
        }
    }
}








